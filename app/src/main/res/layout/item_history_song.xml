<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="#C8D6AF"> <TextView
    android:id="@+id/textTitle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Song Name"
    android:textColor="#2C3E50"
    android:textStyle="bold"
    android:textSize="16sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/textDuration"/>

    <TextView
        android:id="@+id/textArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist Name"
        android:textColor="#555555"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iconMenu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_more"
        app:tint="#2C3E50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iconHeart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_launcher_foreground"
        app:tint="#3F51B5"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/iconMenu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/textDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:45"
        android:textColor="#555555"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/iconHeart"
        app:layout_constraintBaseline_toBaselineOf="@id/textTitle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A0B090"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textArtist"/>

</androidx.constraintlayout.widget.ConstraintLayout>