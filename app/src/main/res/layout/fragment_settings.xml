<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/settings_blue_background"
    android:padding="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">

        <ImageView
            android:id="@+id/btnCloseSettings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            app:tint="@color/settings_text_color"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/settings_text_color"
            android:layout_toEndOf="@id/btnCloseSettings"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/optionNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textColor="@color/settings_text_color"
        android:textSize="16sp"
        android:paddingVertical="16dp"
        android:drawableEnd="@drawable/arrow_forward"
        android:drawableTint="@color/settings_text_color"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#30FFFFFF"/>

    <TextView
        android:id="@+id/optionAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:textColor="@color/settings_text_color"
        android:textSize="16sp"
        android:paddingVertical="16dp"
        android:drawableEnd="@drawable/arrow_forward"
        android:drawableTint="@color/settings_text_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#30FFFFFF"/>

    <TextView
        android:id="@+id/optionResetTree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Tree"
        android:textColor="@color/settings_text_color"
        android:textSize="16sp"
        android:paddingVertical="16dp"
        android:drawableEnd="@drawable/arrow_forward"
        android:drawableTint="@color/settings_text_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#30FFFFFF"/>

</LinearLayout>